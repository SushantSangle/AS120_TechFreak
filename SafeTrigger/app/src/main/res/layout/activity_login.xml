<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.Techfreaks.SafeTrigger.Login"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/loginPageText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/new_font"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="#000"
        android:textSize="35sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/loginPageCardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="12dp"
        app:cardMaxElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:padding="20dp">

            <EditText
                android:id="@+id/txt_email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:backgroundTint="#000"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHighlight="#222"
                android:textColorHint="#333"
                android:textColorLink="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txt_pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_email1"
                android:layout_marginTop="15dp"
                android:backgroundTint="#000"
                android:ems="10"

                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHighlight="#222"
                android:textColorHint="#333"
                android:textColorLink="#333"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pass1"
                android:layout_marginTop="35dp"
                android:background="#000"
                android:elevation="10dp"
                android:onClick="signInButtonPressed"
                android:selectAllOnFocus="false"
                android:text="Sign In"
                android:textColor="#FFF"
                android:textIsSelectable="false"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/new_font"
                android:gravity="center"
                android:text="-OR-"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginBottom="2dp"
                android:background="#000"
                android:elevation="10dp"
                android:onClick="registerButtonPressed"
                android:text="Register Here"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>